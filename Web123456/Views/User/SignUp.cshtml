@model Web123456.ViewModels.SignUpData


@{
    ViewBag.Title = "SignUp";
}

<h2>會員註冊</h2>

@using (Html.BeginForm("SignUp", "User", FormMethod.Post))
{
    <p>姓名:@Html.TextBoxFor(m => m.Name) 
        @Html.ValidationMessageFor(m=>m.Name)
    </p>

    <p>
        帳號:@Html.TextBoxFor(m => m.Account)
        @Html.ValidationMessageFor(m => m.Account)
    </p>

    <p>
        密碼:@Html.PasswordFor(m => m.Password)
        @Html.ValidationMessageFor(m => m.Password)
    </p>

    <p>@Model.Message</p>
    <input type="submit" name="name" value="註冊" />
}